<Window x:Class="studentRecords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded_1" Closing="Window_Closing_1">
    <Grid>
        <ListBox ItemsSource="{Binding}" x:Name="lstStudents" HorizontalAlignment="Left" Height="178" VerticalAlignment="Top" Width="181" Margin="326,10,0,0"/>
        <Button x:Name="btnAddStudent" Content="Add Student" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="130,166,0,0" Click="btnAddStudent_Click"/>
        <TextBox Text="{Binding firstName}"  x:Name="txtFirstName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="130,10,0,0"/>
        <TextBox x:Name="txtGrade" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="130,38,0,0"/>
        <Label Content="First Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,7,0,0"/>
        <Label Content="Grade:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,38,0,0"/>
        <Label x:Name="lblAverageGrade" Content="Average Grade: 0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="326,193,0,0"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="130,132,0,0" Click="Button_Click_1"/>

    </Grid>
</Window>
